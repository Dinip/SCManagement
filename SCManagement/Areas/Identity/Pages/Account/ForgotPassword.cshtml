@page
@using SCManagement
@model ForgotPasswordModel
@{
    ViewData["Title"] = @StringLocalizer["Forgot your password"];
    Layout = null;
}

@inject IStringLocalizer<SharedResource> StringLocalizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/register_and_login.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/img/icon.ico">
</head>
<body>
    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image" style="
        background-image: url('/img/baseball_stadium.jpg');
        background-position:center;
        height: 300px;
        "></div>
        <!-- Background image -->
        <div class="container">
            <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 85%, 0.3);
        backdrop-filter: blur(30px);
        border-radius:20px;
        ">
                <div class="card-body py-5 px-md-5">
                    <!-- Back to Master Page -->
                    <div class="position-absolute top-0 start-0 ps-2 pt-2">
                        <a class="nav-link fw-bold fs-4 fw-bold text-to-dark" style="color:black;" asp-page="/Account/Login">@StringLocalizer["Back"]</a>
                    </div>
                    <div class="row d-flex mt-5 justify-content-center">
                        <div class="col-lg-6 col-12">
                            <h2 class="fw-bold mt-3 mb-4 text-to-dark">@ViewData["Title"]?</h2>
                            <form id="account" method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validations -->
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <!-- Email input -->
                                    <div class="form-outline mt-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="@StringLocalizer["Enter your email"]" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mt-5">
                                    <button type="submit" class="btn-lg btn btn-primary signup">@StringLocalizer["Subject_ResetPassword"]</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
