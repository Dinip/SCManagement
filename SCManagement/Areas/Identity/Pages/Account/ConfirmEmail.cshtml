@page
@using SCManagement
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

@inject IStringLocalizer<SharedResource> StringLocalizer

<!-- Section: Design Block -->
<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('/img/baseball_stadium.jpg');
        background-position:center;
        height: 300px;
        "></div>
    <!-- Background image -->
    <div class="container">
        <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 85%, 0.3);
        backdrop-filter: blur(30px);
        border-radius:20px;
        ">
            <div class="card-body py-5 px-md-5">
                <div class="row d-flex mt-5 justify-content-center">
                    <div class="col-lg-6 col-12">
                        <h2 class="fw-bold mt-3 mb-4">@ViewData["Title"]</h2>
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                    </div>

                    <!--Continue Button -->
                    <div>
                        <a class="w-50 btn-lg btn btn-primary mt-5" asp-area="Identity" asp-page="/Account/Login">Continue</a>
                    </div>
                </div>
            </div>




        </div>
    </div>
</section>

