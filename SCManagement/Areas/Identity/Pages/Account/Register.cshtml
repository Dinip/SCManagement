@page
@using SCManagement
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

@inject IStringLocalizer<SharedResource> StringLocalizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/register_and_login.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="/img/icon.ico">
</head>
<body>

    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image" style="
        background-image: url('/img/baseball_stadium.jpg');
        background-position:center;
        height: 300px;
        "></div>
        <!-- Background image -->
        <div class="container">
            <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 85%, 0.3);
        background-position:center;
        backdrop-filter: blur(30px);
        border-radius:20px;
        ">
                <div class="card-body py-5 px-md-5">
                    <!-- Back to Master Page -->
                    <div class="position-absolute top-0 start-0 ps-2 pt-2">
                        <a class="nav-link fw-bold text-black fs-4 fw-bold" asp-action="Index">@StringLocalizer["Back"]</a>
                    </div>
                    <div class="row d-flex mt-5 justify-content-center">
                        <div class="col-lg-6 col-12">
                            <h2 class="fw-bold mb-5 mt-3">@StringLocalizer["Sign up"]</h2>
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validations -->
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.FirstName" type="text" id="form3Example1" class="form-control" />
                                            <label asp-for="Input.FirstName" class="form-label"></label>
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.LastName" type="text" id="form3Example2" class="form-control" />
                                            <label asp-for="Input.LastName" class="form-label"></label>
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="mb-3 form-floating ">
                                    <input asp-for="Input.Email" type="email" id="form3Example3" class="form-control" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <!-- Password input -->
                                <div class="mb-3 form-floating" title="The password must be at least 6 and at max 100 characters long, including uppercase and lowercase letters, symbols and numbers.">
                                    <input asp-for="Input.Password" id="form3Example4" class="form-control" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger row"></span>
                                </div>

                                <!-- Confirm Password input -->
                                <div class="mb-3 form-floating">
                                    <input asp-for="Input.ConfirmPassword" type="password" id="form3Example4" class="form-control" aria-required="true" />
                                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <!-- Submit button -->
                                <button id="registerSubmit" type="submit" class="btn btn-primary btn-block mb-4 signup">
                                    @StringLocalizer["Sign up"]
                                </button>
                            </form>

                        </div>
                        <!-- Register whit other platforms-->
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="mt-3">
                                <p>@StringLocalizer["Or sign up with"]</p>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn fa-brands fa-@provider.Name.ToLower()" name="provider" value="@provider.Name"   title="Log in using your @provider.DisplayName account"></button>
                                    }

                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->
    <script src="https://kit.fontawesome.com/8b1729a957.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(function () {
            $("[data-toggle='tooltip']").tooltip(options)
        });
    </script>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
