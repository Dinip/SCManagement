@model SCManagement.ViewComponents.CulturePickerModel
<div>
    <form method="GET">
        <div class="form-group">
            <select id="culture-picker"
                    class="form-control"
                    name="culture"
                    onchange="this.parentElement.parentElement.submit();">
                @foreach (var culture in Model.SupportedCultures)
                {
                    <option value="@culture.Name"
                        selected="@(Model.CurrentUICulture.Name == culture.Name)">
                        <span>@Model.ToFlagEmoji(culture.Name)</span> @culture.NativeName
                    </option>
                }
            </select>
        </div>
    </form>
</div>
