@model SCManagement.Models.Club
@inject IStringLocalizer<SharedResource> StringLocalizer
@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/chosen_v1.8.7/chosen.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>


<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
            background-image: url('/img/baseball_stadium.jpg');
            background-position:center;
            height: 300px;
            "></div>
    <!-- Background image -->
    <div class="container">
        <div class="card mx-4 mx-md-5 shadow-5-strong" style="
            margin-top: -100px;
            background: hsla(0, 0%, 85%, 0.3);
            background-position:center;
            backdrop-filter: blur(30px);
            border-radius:20px;
            ">
            <div class="card-body py-5 px-md-5">
                <!-- Back to Master Page -->
                <div class="position-absolute top-0 start-0 ps-2 pt-2">
                    <a class="nav-link fw-bold text-black fs-4 fw-bold" asp-controller="Home" asp-action="Index">@StringLocalizer["Back"]</a>
                </div>
                <div class="row d-flex mt-5 justify-content-center">
                    <div class="col-lg-6 col-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input id="idName" asp-for="Name" placeholder="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <select multiple required data-placeholder="Choose modalities..." asp-for="ModalitiesIds" class="form-control chosen-select w-100" asp-items="ViewBag.modalities"></select>
                                <span asp-validation-for="ModalitiesIds" class="text-danger"></span>
                            </div>

                            @*<partial name="_AddressPartial" model="Model.Address" />*@

                            <div class="form-group mt-3">
                                <input type="submit" value="Create" class="btn btn-primary" style="border-radius: 10px; background-color: #00639A; border-color: #00639A;" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="/lib/chosen_v1.8.7/chosen.jquery.min.js" type="text/javascript"></script>
        <script>
            $(".chosen-select").chosen({ max_selected_options: 5 }).css("display", "").addClass("sr-only");
        </script>
    }
    }
