@model SCManagement.Models.Club
@inject IStringLocalizer<SharedResource> StringLocalizer

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="container-fluid m-0 pb-5 pt-2 " id="colorthiefobj" style=" height:30%;">
        <div class="row mt-5">
            <div class="col-3 d-flex justify-content-center ms-5">
                <img id="clubPicture"
                     src="@Model.Photography.Uri"
                     crossorigin="anonymous"
                     class="rounded-circle"
                     width="150"
                     height="150" />
            </div>
            <div class="col text-white">
                <h1>@Html.DisplayFor(model => model.Name)</h1>
            </div>
        </div>
    </div>
    <div class="container d-flex" style="margin-top:-30px;">
        <div class="card col me-5 shadow" style="border-radius:20px;">
            <div class="card-body" style="border-radius:20px;">
                <div class="row text-end">
                    <form asp-action="Associate">
                        <input asp-for="Id" class="form-control" hidden />
                        <input type="submit" style="border-radius: 10px; background-color: #00639A; border-color: #00639A;" class="btn me-5 mt-2 btn-primary @ViewBag.btnClasses" value="@StringLocalizer[ViewBag.btnValue]"></input>
                    </form>
                </div>
                <div class="row">
                    <div class="col-3 ms-4"><h3 class="text-to-dark">@StringLocalizer["About Us"]:</h3></div>
                    <div class="col-8 mt-1"><span class="text-to-dark">@Html.DisplayFor(model => model.About)</span></div>
                </div>
                <div class="row">
                    <div class="col-3 ms-4"><h3 class="text-to-dark">@StringLocalizer["Terms and conditions"]:</h3></div>
                    <div class="col-8 mt-1"><span class="text-to-dark">@Html.DisplayFor(model => model.TermsAndConditions)</span></div>
                </div>
                <div class="row mt-5 mb-5">
                    <div class="col-3 ms-4"><h3 class="text-to-dark">@StringLocalizer["Modalities"]:</h3></div>
                    <div class="col-auto mt-2">
                        <span class="text-to-dark">@String.Join(", ", Model.Modalities.Select(s => s.Name))</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card col-3 shadow" style="border-radius:20px;">
            <div class="card-body">
                <h4 class="mt-4 text-to-dark">@StringLocalizer["Contacts"]</h4>
                <div class="row mt-3">
                    <div class="col-2">
                        <i class="fa-solid fa-envelope text-to-dark"></i>
                    </div>
                    <div class="col"><span class="text-to-dark">@Html.DisplayFor(model => model.Email)</span></div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        <i class="fa-solid fa-phone text-to-dark"></i>
                    </div>
                    <div class="col-auto"><span class="text-to-dark">@Html.DisplayFor(model => model.PhoneNumber)</span></div>
                </div>
                <div class="row mt-3">
                    <div class="col-2">
                        @*<i class="fa-solid fa-phone text-to-dark"></i>*@
                    </div>
                    @if (Model.Address != null)
                    {
                        <p>@Model.Address.Street</p>
                        <p>@Model.Address.City</p>
                        <p>@Model.Address.Country</p>
                        <p>@Model.Address.ZipCode</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/color-thief/2.3.0/color-thief.umd.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    var colorThief = new ColorThief();

    // Make sure everything is loaded
    window.onload = function () {
        const img = document.getElementById('clubPicture');
        let color;
        // Make sure image is finished loading
        if (img.complete) {
            color = colorThief.getColor(img);
        } else {
            image.addEventListener('load', function () {
                color = colorThief.getColor(img);
            });
        }

        // Use the new color as background for body
        document.getElementById('colorthiefobj').style.background = 'linear-gradient(0deg, rgb(0,0,0) 0%, rgb(' + color + ') 100%)';
        
    };
    
    if (window.history.replaceState) {
        window.history.replaceState(null, null, "/Clubs/" + "@Model.Id");
    }
</script>