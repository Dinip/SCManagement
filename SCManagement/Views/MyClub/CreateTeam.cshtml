@model SCManagement.Controllers.MyClubController.TeamModel
@inject IStringLocalizer<SharedResource> StringLocalizer
@{
    ViewData["Title"] = "CreateTeam";
}

<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
            background-image: url('/img/baseball_stadium.jpg');
            background-position:center;
            height: 300px;
            "></div>
    <div class="container">
        <div class="card mx-4 mx-md-5 shadow-5-strong associate-show" style="
            margin-top: -100px;
            background: hsla(0, 0%, 85%, 0.3);
            background-position:center;
            backdrop-filter: blur(30px);
            border-radius:20px;
            ">
            <div class="card-body py-5 px-md-5">
               <div class="position-absolute top-0 start-0 ps-2 pt-2">
                    <a class="nav-link fw-bold text-black fs-4 fw-bold" asp-controller="Home" asp-action="Index">@StringLocalizer["Back"]</a>
                </div>
                <div class="row d-flex mt-5 justify-content-center">
                    <form asp-action="CreateTeam">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group w-auto">
                            <h3><strong>Create Team</strong></h3>
                            <div class="form-floating mt-3">
                                <div class="d-flex justify-content-center">
                                    <input asp-for="Name" class="form-control w-auto" />
                                </div>
                                <label asp-for="Name" class="control-label"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating mt-3">
                                <div class="d-flex justify-content-center">
                                    <select asp-for="ModalityId" class="form-control w-auto" asp-items="ViewBag.Modalities"></select>
                                </div>
                                <label asp-for="ModalityId" class="control-label"></label>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
