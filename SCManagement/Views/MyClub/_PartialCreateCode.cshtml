@model SCManagement.Controllers.MyClubController.CreateCodeModel
@inject IStringLocalizer<SharedResource> StringLocalizer

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpireDate" class="control-label"></label>
                <input asp-for="ExpireDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select required asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value=@StringLocalizer["Create"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
