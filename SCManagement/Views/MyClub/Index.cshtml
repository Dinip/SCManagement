@model Club?;
@inject IStringLocalizer<SharedResource> StringLocalizer

@{
    ViewData["Title"] = "My Club";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bootstrap.styles.css" asp-append-version="true" />
</head>

<body class="body d-flex align-content-center">
    <div class="container-fluid d-flex justify-content-center w-100">
        @if (Model == null)
        {
            <div class="text-center" style="margin-top:130px;">
                <svg width="222" height="222" viewBox="0 0 222 222" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <rect width="222" height="222" fill="url(#pattern0)" fill-opacity="0.5" />
                    <defs>
                        <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                            <use xlink:href="#image0_48_226" transform="scale(0.005)" />
                        </pattern>
                        <image id="image0_48_226" width="200" height="200" xlink:href="data:image/png;base64," />
                    </defs>
                </svg>
                <br />
                <h2>@StringLocalizer["associated"]</h2>
                <br />
                <a type="button" class="btn btn1 text-white" asp-controller="Clubs" asp-area="" asp-action="Join">
                    @StringLocalizer["Join a club"]
                </a>
                <br />
                <a type="button" class="btn btn1 mt-3 text-white" asp-controller="Clubs" asp-area="" asp-action="Create">
                    @StringLocalizer["Create a club"]
                </a>
            </div>
        }
        else
        {
            <div class="text-center" style="margin-top:15%;">
                <h1 class="display-4 mb-5">Welcome to your club @Model.Name</h1>
                <div class="d-flex justify-content-between">
                    <a class="btn btn1 btn-primary btn-lg" asp-controller="Clubs" asp-action="Details" asp-route-id="@Model.Id">@StringLocalizer["Public Page"]</a>
                    @if ((int)ViewBag.RoleId == 50)
                    {
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="Edit">@StringLocalizer["Edit"]</a>
                    }
                    @if ((int)ViewBag.RoleId >= 40)
                    {
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="StaffList">Staff</a>
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="PartnersList">@StringLocalizer["Partners"]</a>
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="Codes">@StringLocalizer["Codes"]</a>
                    }
                    @if ((int)ViewBag.RoleId >= 30)
                    {
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="AthletesList">@StringLocalizer["Athletes"]</a>
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="TeamList">@StringLocalizer["Teams"]</a>
                    }
                    @if ((int)ViewBag.RoleId == 20)
                    {
                        <a class="btn btn1 btn-primary btn-lg" asp-controller="MyClub" asp-action="MyTeams">@StringLocalizer["MyTeams"]</a>
                    }
                </div>

            </div>
        }
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>
        .btn1 {
            border-radius: 10px;
            margin-left: 20px;
            padding: 5px 25px 5px 25px;
            background-color: #00639A;
            border-color: #00639A;
        }
    </style>
</body>
</html>
