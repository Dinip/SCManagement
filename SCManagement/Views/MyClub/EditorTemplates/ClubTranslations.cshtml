@model SCManagement.Models.ClubTranslations



<div id="@Model.Atribute.ToLower()-@Model.Language" class="row form-outline @Model.Atribute.ToLower()-lang" style="margin-bottom:20px;">
    <textarea asp-for="Value" data-lang="@Model.Language" placeholder="@Model.Language.Substring(0,2).ToUpper()" style="border:0; border-radius:5px; margin-top:-3px; border-top-left-radius:0 !important;"></textarea>
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Language)
    @Html.HiddenFor(x => x.Atribute)
</div>