@model SCManagement.Models.Event



@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnroolLimitDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnroolLimitDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPublic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HaveRoute)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HaveRoute)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxEventEnrolls)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxEventEnrolls)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Club)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Club.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventResultType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventResultType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressByPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressByPath)
        </dd>

        @if(Model.Route != null){
            <a class="nav-item nav-link text-to-dark" style="color:blue;" asp-controller="Events" asp-action="PathInfoMapBox" asp-route-id=@Model.Id>Ver Caminho</a>
        }else{
            <a class="nav-item nav-link text-to-dark" style="color:blue;" asp-controller="Events" asp-action="Edit" asp-route-id=@Model.Id>Adicionar Caminho</a>
        }

        @*Botao para Inscrever ou pagar inscrição*@
        @if (ViewBag.IsEnrolled)
        {
            <span>Estado da Inscrição</span>
            if (ViewBag.IsPayed != null && ViewBag.IsPayed)
            {
                <span>Inscrito</span>
            }
            else
            {
                <span>Pagamento em Falta</span>
                <form asp-action="CancelEventEnroll" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-primary">Cancelar Inscrição</button>
                </form>
            }
            @*<form asp-action="PayEvent" asp-route-id="@Model.Id">*@
            <button type="submit" class="btn btn-primary">Pagar Inscrição</button>
            @*</form>*@

        }
        else
        {
            <form asp-action="EventEnrollment" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-primary">Inscrever</button>
            </form>
        }

        @*Botao para visualizar os inscritos no evento*@
        @if (ViewBag.IsStaff != null && ViewBag.IsStaff)
        {
            <div class="card mt-3 shadow" style="height:650px !important;  border-radius:20px;">
                <div class="card-body">
                    <table id="table_id" class="display">
                        <thead>
                            <tr>
                                <th class="text-to-dark">
                                    Nome
                                    @*@StringLocalizer["Name"]*@
                                </th>
                                <th class="text-to-dark">
                                    Estado da Inscrição
                                    @*@StringLocalizer["Age"]*@
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.UsersEnrooled != null)
                            {
                                @foreach (var item in Model.UsersEnrooled)
                                {
                                    <tr style="cursor:pointer">
                                        <td class="text-to-dark">
                                            @Html.DisplayFor(modelItem => item.User.FullName)
                                        </td>
                                        <td class="text-to-dark">
                                            @Html.DisplayFor(modelItem => item.EnrollStatus)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    @if (ViewBag.IsStaff != null && ViewBag.IsStaff)
    {
        <form asp-action="Delete">
            <input name="Id" value="@Model?.Id" class="form-control" hidden />
            <input type="submit" value="Delete" />
        </form>
    }
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

