@model IEnumerable<SCManagement.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div id="modal" class="modal">
    <div class="modal-content">
        <span onclick="$('#modal').hide()" class="close">&times;</span>
        <div id="modal-inner-content">
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HaveRoute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxEventEnrolls)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.Club)
            </th>
            @*   <th>
                @Html.DisplayNameFor(model => model.EventResultType)
            </th>*@
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="openDetails(@item.Id)" style="cursor:pointer">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
                <td>
          @if(item.HaveRoute){
                    <a>See Route</a>
                }
                </td>
           <td>
                @Html.DisplayFor(modelItem => item.MaxEventEnrolls)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club.Name)
            </td>
            
       @*     <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <form asp-action="Delete">
                        <input name="Id" value="@item.Id" class="form-control" hidden />
                        <input type="submit" value="Delete"/>
                    </form>
            </td>*@
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript">
    let modal = document.getElementById("modal")
    window.onclick = function (event) {
        if (event.target == modal) {
            $("#modal").hide();
        }
    }

    $(document).ready(function () {
        $.noConflict();
        $("#table_id").DataTable({
            columnDefs: [
                { orderable: false, targets: [-1] }
            ]
        });
    });

    function openDetails(id) {
        $.ajax({
            url: `/Events/Details/${id}`,
            type: 'GET',
            async: false,
            success: function (result) {
                $("#modal-inner-content").html(result);
                $("#modal").show();
            }
        });
    }
</script>